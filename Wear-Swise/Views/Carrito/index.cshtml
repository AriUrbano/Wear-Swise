@model CarritoViewModel
@{
    ViewData["Title"] = "Tu Carrito de Compras";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-shopping-cart"></i> Tu carrito está vacío
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @item.NombreProducto
                            </td>
                            <td>@item.Precio.ToString("C")</td>
                            <td>
                                <form asp-action="ActualizarCantidad" method="post" class="d-inline-flex">
                                    <input type="hidden" name="idDetalle" value="@item.IdDetallePedido" />
                                    <input type="number" name="cantidad" value="@item.Cantidad" min="1" 
                                           class="form-control form-control-sm">
                                    <button type="submit" class="btn btn-sm btn-outline-primary ms-2">
                                        <i class="fas fa-sync-alt"></i>
                                    </button>
                                </form>
                            </td>
                            <td>@item.Subtotal.ToString("C")</td>
                            <td>
                                <form asp-action="Eliminar" method="post">
                                    <input type="hidden" name="idDetalle" value="@item.IdDetallePedido" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                        <td><strong>@Model.Total.ToString("C")</strong></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Listar" asp-controller="Productos" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Seguir comprando
            </a>
            <a asp-action="Checkout" asp-controller="Orden" class="btn btn-success">
                <i class="fas fa-credit-card"></i> Finalizar compra
            </a>
        </div>
    }
</div>
