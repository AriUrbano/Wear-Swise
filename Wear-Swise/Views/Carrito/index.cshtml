@model CarritoViewModel
@{
    ViewData["Title"] = "Tu Carrito de Compras";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <!-- Mensajes de estado -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <!-- Pestañas -->
    <ul class="nav nav-tabs" id="carritoTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="carrito-tab" data-bs-toggle="tab" data-bs-target="#carrito" type="button" role="tab">
                Carrito (@Model.Items.Count)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="historial-tab" data-bs-toggle="tab" data-bs-target="#historial" type="button" role="tab">
                Historial (@Model.Historial.Count)
            </button>
        </li>
    </ul>

    <div class="tab-content" id="carritoTabsContent">
        <!-- Tab Carrito -->
        <div class="tab-pane fade show active" id="carrito" role="tabpanel">
            @if (!Model.Items.Any())
            {
                <div class="alert alert-info mt-3">
                    <i class="fas fa-shopping-cart"></i> Tu carrito está vacío
                </div>
            }
            else
            {
                <div class="table-responsive mt-3">
                    <table class="table">
                        <!-- Tabla del carrito (igual que antes) -->
                        <!-- ... -->
                    </table>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Listar" asp-controller="Producto" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Seguir comprando
                    </a>
                    <form asp-action="Checkout" method="post">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-credit-card"></i> Finalizar compra
                        </button>
                    </form>
                </div>
            }
        </div>

        <!-- Tab Historial -->
        <div class="tab-pane fade" id="historial" role="tabpanel">
            @if (!Model.Historial.Any())
            {
                <div class="alert alert-info mt-3">
                    No tienes pedidos completados aún.
                </div>
            }
            else
            {
                <div class="accordion mt-3" id="historialAccordion">
                    @foreach (var pedido in Model.Historial)
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading@(pedido.IdPedido)">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(pedido.IdPedido)">
                                    Pedido #@pedido.IdPedido - @pedido.Fecha.ToString("g") - Total: @pedido.Total.ToString("C")
                                </button>
                            </h2>
                            <div id="collapse@(pedido.IdPedido)" class="accordion-collapse collapse" data-bs-parent="#historialAccordion">
                                <div class="accordion-body">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Producto</th>
                                                <th>Precio</th>
                                                <th>Cantidad</th>
                                                <th>Subtotal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in pedido.Items)
                                            {
                                                <tr>
                                                    <td>@item.NombreProducto</td>
                                                    <td>@item.Precio.ToString("C")</td>
                                                    <td>@item.Cantidad</td>
                                                    <td>@item.Subtotal.ToString("C")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Activar la pestaña de historial si viene del checkout
        document.addEventListener('DOMContentLoaded', function() {
            if (window.location.hash === '#historial') {
                var tab = new bootstrap.Tab(document.querySelector('#historial-tab'));
                tab.show();
            }
        });
    </script>
}