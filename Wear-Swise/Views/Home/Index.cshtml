@{
    ViewData["Title"] = "Inicio";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div>
    <body>
    <main>
         <header class="header">
            <div class="logo">
                <h1><img src="~/Images/Logo Wear Swise.png" alt=""></h1>
            </div>
            <nav class="menu">
                <button>Equipo</button>
                <button onclick="window.location.href='@Url.Action("Listar", "Producto")'">
                    Comprar Productos
                </button>
                <button>Vender Productos</button>
            </nav>
            <div class="search">
                <input type="text" placeholder="Buscar...">
            </div>
            <div class="icons">
                <!-- Botón del Carrito -->
                <button class="cart" onclick="window.location.href='@Url.Action("Index", "Carrito")'">
                    <span class="icon"><img src="~/Images/carrito-de-compras negro.png" alt="Carrito"></span>
                    @if (User.Identity.IsAuthenticated && ViewBag.CarritoCount > 0)
                    {
                        <span class="cart-badge">@ViewBag.CarritoCount</span>
                    }
                </button>
                
                <!-- Botón de Login/Logout - Versión unificada -->
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="logout-btn">
                            <span class="icon">
                                <img src="~/Images/usuario (1).png" alt="Cerrar sesión">
                            </span>
                        </button>
                    </form>
                }
                else
                {
                    <button class="login-btn" onclick="window.location.href='@Url.Action("Login", "Account")'">
                        <span class="icon">
                            <img src="~/Images/usuario (1).png" alt="Iniciar sesión">
                        </span>
                    </button>
                }
            </div>
        </header>
        <div class="welcome">
            <h1>BIENVENIDO A WEAR SWISE</h1>
           @if (User.Identity.IsAuthenticated)
    {
        <div class="welcome-message-container">
            <p class="welcome-message">¡Hola @User.Identity.Name! Descubre nuestras últimas colecciones.</p>
            <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="logout-btn-welcome">
                    <span>Cerrar sesión</span>
                </button>
            </form>
        </div>
    }
            <div class="categories">
                <div class="category" onclick="window.location.href='@Url.Action("Listar", "Producto", new { categoria = "hombres" })'">
                    <img src="~/Images/foto moodboard 3.jpg" alt="Hombres">
                    <p>HOMBRES</p>
                </div>
                <div class="category" onclick="window.location.href='@Url.Action("Listar", "Producto", new { categoria = "mujeres" })'">
                    <img src="~/Images/moodboard 4.jpg" alt="Mujeres">
                    <p>MUJERES</p>
                </div>
            </div>
        </div>
    </main>
</body>
</div>