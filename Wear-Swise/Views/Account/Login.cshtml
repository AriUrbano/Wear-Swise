@model PrimerProyecto.Models.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wear Swise</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h2 class="auth-title">Inicia Sesión</h2>
            </div>
            <div class="auth-body">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
                
                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    
                    <div class="mb-3">
                        <label asp-for="CorreoElectronico" class="form-label">Correo Electrónico</label>
                        <input asp-for="CorreoElectronico" class="form-control" required>
                        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Contrasena" class="form-label">Contraseña</label>
                        <input asp-for="Contrasena" type="password" class="form-control" required>
                        <span asp-validation-for="Contrasena" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="Recordarme" class="form-check-input">
                        <label asp-for="Recordarme" class="form-check-label">Recordarme</label>
                    </div>
                    
                    <button type="submit" class="btn btn-auth w-100">Ingresar</button>
                </form>
            </div>
            <div class="auth-footer">
                <a asp-action="Registrar" class="auth-link">¿No tienes cuenta? Regístrate</a>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>