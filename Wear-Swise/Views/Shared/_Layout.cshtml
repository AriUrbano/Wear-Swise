<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
  

    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @if (Context.Session.GetInt32("user_id") != null)
{
    <div class="float-end">
        <span class="me-3">Bienvenido @Context.Session.GetString("user_name")</span>
        <a href="@Url.Action("Logout", "Account")" class="btn btn-sm btn-danger">Cerrar Sesión</a>
    </div>
}
</body>

</html>
